<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Registration Fields -->
        <EditText
            android:id="@+id/emailField"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorTextPrimary"
        android:textColorHint="@color/button_gray"
        android:backgroundTint="@color/dark_gray"
        android:autofillHints="emailAddress"
        android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/button_gray"
            android:backgroundTint="@color/dark_gray"
            android:autofillHints="password"
            android:layout_gravity="center_horizontal" />

        <!-- Person 1 Fields -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/datos_persona_1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary" />  <!-- Asegura que el texto tambiÃ©n tenga buen contraste -->

        <EditText
            android:id="@+id/nameField"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/name_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/button_gray"
            android:backgroundTint="@color/dark_gray"
            android:autofillHints="name"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/lastnameField"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/lastname_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/button_gray"
            android:backgroundTint="@color/dark_gray"
            android:autofillHints="familyName"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:id="@+id/nacionalidadSpinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/razaSpinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/edadSpinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/personalidadSpinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Person 2 Fields -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/datos_persona_2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary" />

        <EditText
            android:id="@+id/name2Field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/name2_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/button_gray"
            android:backgroundTint="@color/dark_gray"
            android:autofillHints="name"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/lastname2Field"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="@string/lastname2_hint"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/button_gray"
            android:backgroundTint="@color/dark_gray"
            android:autofillHints="familyName"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:id="@+id/nacionalidad2Spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/raza2Spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/edad2Spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <Spinner
            android:id="@+id/personalidad2Spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Photo Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fotos_de_perfil"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/photoRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/addPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/add_photo"
            android:minHeight="40dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/accessible_blue"
            android:textColor="@color/white"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/guardar_registro"
            android:minHeight="40dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/accessible_blue"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>