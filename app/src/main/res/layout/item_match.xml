<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            android:background="@color/profile_placeholder_background"
            android:contentDescription="@string/profile_photo_description" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/match_name_placeholder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:contentDescription="@string/match_name_description" />

            <TextView
                android:id="@+id/textViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/match_info_placeholder"
                android:textSize="14sp"
                android:contentDescription="@string/match_info_description" />

        </LinearLayout>

        <!--  Opcional:  Un icono o botón para indicar interés/match directamente desde la lista -->
        <!--
        <ImageView
            android:id="@+id/imageViewMatch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart_outline"  // Reemplaza con un icono de corazón
            android:contentDescription="Indicar interés"
            android:layout_gravity="center_vertical" />
        -->

    </LinearLayout>

</androidx.cardview.widget.CardView>